{% extends "ClarolineCoreBundle:Desktop:layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/ujmexo/css/new_QI.css') }}" type="text/css" rel="stylesheet"/>
    <link href="{{ asset('bundles/ujmexo/css/tableLayout.css') }}" type="text/css" rel="stylesheet"/>
{% endblock %}

{% block title %} {{ 'edit a question' | trans }} {% endblock %}

{% block section_content %}

    <h1>{{'interactionGraphic Edition'|trans}}</h1>

    <a href="{{ path('ujm_question_index') }}" >
        <i class="icon-arrow-left"></i> {{ 'back to the list' | trans }}
    </a><br/><br/>
    
    <form class="well label_bold" id="InterGraphForm" action="{{ path('ujm_interactiongraphic_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {#{ form_widget(edit_form) }#}
            
    {% include "UJMExoBundle:Partial:questionEdit.html.twig" %} 
            
    <p>
        <ul style="margin-left: 0; list-style-type: none;">
            <li style="float: left;">
{# ------------------------------------------------- Champs Liste images ---------------------------------------------------------------------------- #}
                {{ form_row(edit_form.document, { 'attr': {'style': 'float left;'} }) }}
            </li>
            <li style="float: left;  margin-left: 70px; margin-top: 4%;">
{# ------------------------------------------------- Lien nouvelle image ---------------------------------------------------------------------------- #}
                <a href="{{ path('ujm_interactiongraphic_SavePic') }}" onclick="window.open(this.href, 'NewPic',
                'height=167, width=287, top=300, left=570, toolbar=no, menubar=no, location=no, resizable=yes, scrollbars=no, status=no'
                ); return false;">{{ "add a new picture" | trans }} ...</a>
            </li>
        </ul>
    </p>
    <br/><br/><br/><br/>

{# ------------------------------------------------- Boutton affichage image ---------------------------------------------------------------------------- #}

    <p><input id="LoadImg" type="button" value="{{ 'select' | trans }}" onclick="LoadPic('{{ path('ujm_interactiongraphic_DisplayPic') }}',
        '{{ asset('bundles') }}', {{ edit_form.document.vars.id }});"/></p><br/>

{# ------------------------------------------------- Zone affichage image ---------------------------------------------------------------------------- #}

    <a onclick="DisplayInstruction();" id="Order"
       onmouseover="document.body.style.cursor = 'pointer';"
       onmouseout="document.body.style.cursor = 'default';"
    >{{ 'show Instructions' | trans }}</a>

    <a onclick="HideInstruction();" id="hide"
       onmouseover="document.body.style.cursor = 'pointer';"
       onmouseout="document.body.style.cursor = 'default';"
    >{{ 'hide Instructions' | trans }}</a>

    <div id="Instructions" style="border: #00CCFF dotted thin; margin: 20px; padding: 10px;">
        ~ {{ 'resizeZone' | trans }}<hr/>~ {{ 'selectZone' | trans }}<hr/>
        ~ {{ 'placeZone' | trans }}<hr/>~ {{ 'resize' | trans }}<hr/>
        ~ {{ 'erase' | trans }}<hr/>~ {{ 'pointInstruction' | trans }}
    </div>
    <br/>
    <div style="position: relative;" id="Answer">
        <img src="{{ asset(entity.document.url) }}" width="{{entity.width}}" height="{{entity.height}}"
             id="AnswerImage"/>

        {% set i = 0 %}{% set allInfo = '' %}
        {% for p in position %}
            <img src="{{ asset('bundles/ujmexo/images/graphic/circlew.png') }}" alt="AnswerZone{{ i }}" id="img{{ i }}"
                 style="position: absolute;"/>

            {% set allInfo = p.shape~';'~p.color~';'~asset('bundles/ujmexo/images/graphic/')~';'~p.value~';'~p.size~';'~p.scoreCoords~'^'~allInfo %}

            {% set i = i + 1 %}
       {% endfor %}
    </div>

{# ------------------------------------------------- tableau zone de reponse ---------------------------------------------------------------------------- #}
    <br/>
    <div style="position: relative;" id="AnswerArray">
        <table class="record_properties table table-striped table-bordered table-condensed" style="width:500px;">
            <tr>
                <th class="classic">{{ 'answer zone' | trans }}</th>
                <th class="classic">{{ 'shape' | trans }}</th>
                <th class="classic">{{ 'color' | trans }}</th>
                <th class="classic">{{ 'points' | trans }}</th>
            </tr>

            <tr>
                <td class="classic">
                    <img src="{{ asset('bundles/ujmexo/images/graphic/circlew.png') }}"
                         id="movable" style="position: absolute;"/>
                </td>

                <td class="classic">
                    <select id="shape" name="shape" size="1" style="width:100px; margin-top: 10px;" onchange="changezone('{{ asset('bundles/ujmexo/images/graphic/') }}');">
                        <option value="circle"  selected>{{ 'cercle' | trans }}</option>
                        <option value="rect" >{{ 'rectangle' | trans }}</option>
                    </select>
                </td>

                <td class="classic">
                    <select id="color" name="color" size="1" style="width:70px; margin-top: 10px;" onchange="changezone('{{ asset('bundles/ujmexo/images/graphic/') }}');">
                        <option value="white"    style="background-color:#FFFFFF;"selected> &nbsp;&nbsp;&nbsp; </option>
                        <option value="red"      style="background-color:#FF0000;">         &nbsp;&nbsp;&nbsp; </option>
                        <option value="blue"     style="background-color:#002FFF;">         &nbsp;&nbsp;&nbsp; </option>
                        <option value="purple"   style="background-color:#8B008B;">         &nbsp;&nbsp;&nbsp; </option>
                        <option value="green"    style="background-color:#008600;">         &nbsp;&nbsp;&nbsp; </option>
                        <option value="orange"   style="background-color:#FF7A00;">         &nbsp;&nbsp;&nbsp; </option>
                        <option value="yellow"   style="background-color:#FFFF09;">         &nbsp;&nbsp;&nbsp; </option>
                    </select>
                </td>

                <td class="classic">
                    <input type="TEXT" id="points" name="points" value="1" style="width:50px; text-align: end; margin-top: 10px;" onblur="CheckScore('{{ 'wrongPoint' | trans }}');">
                </td>
            </tr>
        </table>
    </div>

    <input type="hidden" id="info" name="info" value="{{i}}~{{allInfo}}"/>

    <input type="hidden" id="imgwidth" name="imgwidth" value="0"/>
    <input type="hidden" id="imgheight" name="imgheight" value="0"/>
    <input type="hidden" id="coordsZone" name="coordsZone" value=""/>

    <input type="hidden" name="exercise" value="{{ entity.id }}" />

    <input type="hidden" id="message" name="message" value="{{ 'inside' | trans }} ..."/>

{# ------------------------------------------------- Boutton validation formulaire ---------------------------------------------------------------------------- #}

    <div style="display: none;">{{ form_rest(edit_form) }}</div>
    
    {{ form_errors(edit_form) }}

    <p>
        <button type="submit" id="button_submit"
            onclick="Check('{{ 'noTitle' | trans }}', '{{ 'noQuestion' | trans }} ...','{{ 'noImg' | trans }} !',
            '{{ 'noAnswerZone' | trans }} ...', '{{ edit_form.interaction.question.title.vars.id }}',
            '{{ edit_form.interaction.invite.vars.id }}');return false;">{{ 'edit' | trans }}</button>
    </p>
    </form>

    {{ tinymce_init() }}

{% endblock %}

{# ------------------------------------------------- Javascript ---------------------------------------------------------------------------- #}

{% block javascripts %}
{{ parent() }}

    <script type="text/javascript" src="{{ asset('bundles/ujmexo/js/hint.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/ujmexo/js/category_pop.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/ujmexo/js/editionAv.js') }}"></script>
     <script type="text/javascript" src="{{ asset('bundles/ujmexo/js/graphic.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/ujmexo/js/GraphicEdit.js') }}"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            linkCategory('{{ path('ujm_category_new_pop') }}');
            hintCSSEdit();
            editionAv();
            addFormHintEdit('{{ "add hint" | trans }}',  '{{ asset('bundles/ujmexo/images/ajouter_ligne.jpeg') }}');
        });
    </script>
{% endblock %}