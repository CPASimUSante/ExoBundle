{% extends "ClarolineCoreBundle:Desktop:layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/ujmexo/css/paper.css') }}" type="text/css" rel="stylesheet"/>
{% endblock %}
            
{% block title %} Correction {% endblock %}

{% block section_content %}
    
        <h1>Question : {{ interG.interaction.question.title }}</h1>

            <div>
                <p>{{ interG.interaction.question.description }}</p>
            </div>

            <h3>
                <p>{{ interG.interaction.invite }}</p>
            </h3>
        
        <p><img src="{{asset (doc.url)}}" width="{{ interG.width }}" height="{{ interG.height }}" 
                alt="AnswerImage" id="AnswerImage1"/></p>

        <p>Score : {{ score }}/{{ total }}.<br/>

            {% if score == 0 and penalty == 0 %} 
                Aucune bonne réponse.
            {% elseif penalty == 0 %}
                Indices non vus, pas de pénalité.
            {% else %}
                Points bonne réponse : {{ point }} avec : -{{ penalty }} de pénalité pour indices vus.
            {% endif %}
        </p>

        {%set i = 0 %}{% set allInfo = '' %}

        {% for c in coords %} 

            {% set numb = coords[i].value|split(',') %}
            {% set repco = rep[i]|split('-') %}

            <img src="/Claroline/web/bundles/ujmexo/images/graphic/circlew.png" alt="RightAnswer{{i}}" id="1ra{{i}}"
                 style="position: absolute; z-index: 2;" width="{{ coords[i].size }}"/><br/>

            <img src="{{ asset('bundles/ujmexo/images/graphic/answer.png') }}" alt="AnswerZone{{i}}" id="1cursor{{i}}" 
                 style="position: absolute; z-index: 7;"/>

            {% set allInfo = coords[i].shape~';'~coords[i].color~';'~asset('bundles/ujmexo/images/graphic/')~';'
                            ~numb[0]~';'~numb[1]~';'~repco[0]~';'~repco[1]~';'~coords[i].size~'^'~allInfo %}

            {%set i = i + 1%}

        {% endfor %}
            
            <input type="hidden" id="info" name="info" value="{{i}}~{{allInfo}}"/>

        <a href="{{ path('ujm_question_index') }}">{{ "Question list" | trans }}</a>
    </div>
    
    <script type="text/javascript" src="{{ asset('bundles/ujmexo/js/GraphicOverview.js') }}"></script>
  {% endblock %}
    
    {#% block javascripts %}
{{ parent() }}

    <script type="text/javascript">
        $('body').ready(function() {
      loading();
});
        </script>
{% endblock %#}