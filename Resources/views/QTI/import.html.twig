<div class="modal fade" id="modalqtiimport" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="panel-title">{{'QTI import'|trans}}</h3>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </br>
            </div>
            <div class="modal-body">
                {% if typeImport  == 'question' %}
                    <form id="qtiImportForm" enctype="multipart/form-data" method="post"
                          action="{{ path('ujm_qti_import_question', { 'exerciceID': exoID }) }}">
                        <input id="qtifile" class="form-control" name="qtifile" type="file" required="true" />
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'cancel'|trans({}, 'platform') }}</button>
                            <button type="submit" class="btn btn-primary" id="submit_picture">
                                {{ 'ok'|trans({}, 'platform') }}
                            </button>
                        </div>
                    </form>
                {% else %}
                    <form id="qtiImportForm" enctype="multipart/form-data" method="post"
                          action="{{ path('ujm_qti_import_exercise_questions', { 'exerciceID': exoID }) }}">
                        <input id="qtifile" class="form-control" name="qtifile" type="file" required="true" />
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'cancel'|trans({}, 'platform') }}</button>
                            <button type="submit" class="btn btn-primary" id="submit_picture">
                                {{ 'ok'|trans({}, 'platform') }}
                            </button>
                        </div>
                    </form>
                {% endif %}
           </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $('#modalqtiimport').modal('toggle', 'show');
</script>