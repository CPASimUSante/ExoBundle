{% extends "ClarolineCoreBundle:Workspace:layout.html.twig" %}

{% block title %} {{ "Question list" | trans }} {% endblock %}

{% block section_content %}
    <h1>{{ "My questions" | trans }}</h1>

    <a href="{{ path('ujm_exercise_open', { 'exerciseId':  exerciseID }) }}"><i class="icon-arrow-left"></i> {{ "Back" | trans }}</a>
    &nbsp;&nbsp;|&nbsp;&nbsp;
    <a href="{{ path('ujm_exercise_import_question', { 'exoID':  exerciseID }) }}">{{ "Import questions" | trans }}</a>
    &nbsp;&nbsp;|&nbsp;&nbsp;
    <a href="{{ path('ujm_question_new', { 'exoID': exerciseID }) }}">{{ "Create a new entry" | trans }}</a>
    <br/><br/>

    {% if interactions is not empty %}
        <table class="table table-striped table-bordered table-condensed"  id="QuestionArray">
            <thead>
                <tr>
                    <th style="text-align: center" onclick="SortQuestions('Category', 'QuestionArray');"
                    onmouseover="this.style.color = '#0099FF'; body.style.cursor = 'pointer';"
                    onmouseout="this.style.color = 'black'; body.style.cursor = 'default';">
                    <i class="icon-chevron-up" id="upC"  style="display: none;"></i>
                    <i class="icon-chevron-down" id="downC"  style="display: none;"></i>
                    {{ "Category" | trans }}
                </th>
                <th style="text-align: center"onclick="SortQuestions('Title', 'QuestionArray');"
                    onmouseover="this.style.color = '#0099FF'; body.style.cursor = 'pointer';"
                    onmouseout="this.style.color = 'black'; body.style.cursor = 'default';">
                    <i class="icon-chevron-up" id="upTi"  style="display: none;"></i>
                    <i class="icon-chevron-down" id="downTi"  style="display: none;"></i>
                    {{ "Title" | trans }}
                </th>
                <th style="text-align: center"onclick="SortQuestions('Type', 'QuestionArray');"
                    onmouseover="this.style.color = '#0099FF'; body.style.cursor = 'pointer';"
                    onmouseout="this.style.color = 'black'; body.style.cursor = 'default';">
                    <i class="icon-chevron-up" id="upTy"  style="display: none;"></i>
                    <i class="icon-chevron-down" id="downTy"  style="display: none;"></i>
                    {{ "Type" | trans }}
                </th>
                <th style="text-align: center"onclick="SortQuestions('Invite', 'QuestionArray')"
                    onmouseover="this.style.color = '#0099FF'; body.style.cursor = 'pointer';"
                    onmouseout="this.style.color = 'black'; body.style.cursor = 'default';">
                    <i class="icon-chevron-up" id="upI"  style="display: none;"></i>
                    <i class="icon-chevron-down" id="downI"  style="display: none;"></i>
                    {{ "Question" | trans }}
                </th>
                    <th style="text-align: center">{{ "Actions" | trans }}</th>
                </tr>
            </thead>
            <tbody>
            {% set i = 0 %}
            {% for interaction in interactions %}
                <tr>
                    <td style="text-align: center; vertical-align: middle;">{{ interaction.question.category.value }}</td>
                    <td style="text-align: center; vertical-align: middle;"><a href="{{ path('ujm_question_show', { 'id': interaction.question.id }) }}">{{ interaction.question.title }}</a></td>
                    <td style="text-align: center; vertical-align: middle;">{{ interaction.type }}</td>
                    <td style="text-align: center; vertical-align: middle;">{{ interaction.invite|raw }}</td>
                    <td style="text-align: center; vertical-align: middle;">
                        <ul  style="list-style-type: none; margin-left: 0;">
                            {% if(questionWithResponse[i] == 0) %}
                                <li>
                                    <a href="{{ path('ujm_question_edit', { 'id': interaction.question.id }) }}">{{ "Edit" | trans }}</a>
                                </li>
                            {% else %}
                                <li>
                                    <a href="{{ path('ujm_question_edit', { 'id': interaction.question.id }) }}" style="color:red">{{ "Edit" | trans }}</a>
                                </li>
                            {% endif %}
                            <li>
                                <form action="{{ path('ujm_exercise_question_delete', { 'exoID': exerciseID, 'qid': interaction.question.id }) }}" method="post">
                                    <button type="submit">{{ "Delete of my exercise" | trans }}</button>
                                </form>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
     {% if pagerQuestion.haveToPaginate %}
            {{ pagerfanta(pagerQuestion, 'twitter_bootstrap_translated', {'routeName': 'ujm_exercise_questions', 'routeParams':
            { 'id': exerciseID } }) }}
        {% endif %}
    {% else %}
        <p>{{ 'noQuestionFound'|trans }}</p>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript" src="{{ asset('bundles/ujmexo/js/SortAndSearch.js') }}"></script>

{% endblock %}