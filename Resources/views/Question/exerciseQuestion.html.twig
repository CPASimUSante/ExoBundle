{% extends "ClarolineCoreBundle:Workspace:layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/ujmexo/css/tableLayout.css') }}" type="text/css" rel="stylesheet"/>
{% endblock %}

{% block title %} {{ 'list of question' | trans }} {% endblock %}

{% block section_content %}
    <h1>{{ 'my questions' | trans }}</h1>

    <a href="{{ path('ujm_exercise_open', { 'exerciseId':  exerciseID }) }}"><i class="icon-arrow-left"></i> {{ 'back' | trans }}</a>
    &nbsp;&nbsp;|&nbsp;&nbsp;
    <a href="{{ path('ujm_exercise_import_question', { 'exoID':  exerciseID, 'pageGoNow': pagerQuestion.getNbPages,
        'maxPage': pagerQuestion.maxPerPage, 'nbItem': pagerQuestion.getNbResults }) }}">{{ 'import questions' | trans }}</a>
    &nbsp;&nbsp;|&nbsp;&nbsp;
    <a href="{{ path('ujm_question_new', { 'exoID': exerciseID }) }}">{{ 'create a new entry' | trans }}</a>
    <br/><br/>

    <button type="button" id="SaveOrder" style="display: none;"
        onclick="SaveNewOrder('{{ path('ujm_exercise_question_order') }}', {{exerciseID}}, {{interactions|length}});">
        {{ 'saveNewOrder' | trans }}
    </button><br/>

    {% if interactions is not empty %}
        <table class="table table-striped table-bordered table-condensed"  id="QuestionArray">
            <thead>
                <tr>
                    <th class="classic" onclick="SortQuestions('Category', 'QuestionArray');"
                    onmouseover="this.style.color = '#0099FF'; body.style.cursor = 'pointer';"
                    onmouseout="this.style.color = 'black'; body.style.cursor = 'default';">
                    <i class="icon-chevron-up" id="upC"  style="display: none;"></i>
                    <i class="icon-chevron-down" id="downC"  style="display: none;"></i>
                    {{ 'category' | trans }}
                </th>
                <th class="classic" onclick="SortQuestions('Title', 'QuestionArray');"
                    onmouseover="this.style.color = '#0099FF'; body.style.cursor = 'pointer';"
                    onmouseout="this.style.color = 'black'; body.style.cursor = 'default';">
                    <i class="icon-chevron-up" id="upTi"  style="display: none;"></i>
                    <i class="icon-chevron-down" id="downTi"  style="display: none;"></i>
                    {{ 'title' | trans }}
                </th>
                <th class="classic" onclick="SortQuestions('Type', 'QuestionArray');"
                    onmouseover="this.style.color = '#0099FF'; body.style.cursor = 'pointer';"
                    onmouseout="this.style.color = 'black'; body.style.cursor = 'default';">
                    <i class="icon-chevron-up" id="upTy"  style="display: none;"></i>
                    <i class="icon-chevron-down" id="downTy"  style="display: none;"></i>
                    {{ 'type' | trans }}
                </th>
                <th class="classic" onclick="SortQuestions('Invite', 'QuestionArray')"
                    onmouseover="this.style.color = '#0099FF'; body.style.cursor = 'pointer';"
                    onmouseout="this.style.color = 'black'; body.style.cursor = 'default';">
                    <i class="icon-chevron-up" id="upI"  style="display: none;"></i>
                    <i class="icon-chevron-down" id="downI"  style="display: none;"></i>
                    {{ 'question' | trans }}
                </th>
                <th class="classic">{{ 'actions' | trans }}</th>
                <th class="classic">{{ 'order' | trans }}</th>
                </tr>
            </thead>
            <tbody>
            {% set i = 0 %}
            {% for interaction in interactions %}
                {% set x = i + 3 * (pagerQuestion.getCurrentPage - 1) %}
                <tr>
                    <td class="classic">{{ interaction.question.category.value }}</td>
                    <td class="classic"><a href="{{ path('ujm_question_show', { 'id': interaction.question.id }) }}">{{ interaction.question.title }}</a></td>
                    <td class="classic">{{ interaction.type }}</td>
                    <td class="classic">{{ interaction.invite|raw }}</td>
                    <td class="classic">
                        <ul  style="list-style-type: none; margin-left: 0;">
                            {% if(questionWithResponse[x] == 0) %}
                                <li>
                                    <a href="{{ path('ujm_question_edit', { 'id': interaction.question.id }) }}">{{ 'edit' | trans }}</a>
                                </li>
                            {% else %}
                                <li>
                                    <a href="{{ path('ujm_question_edit', { 'id': interaction.question.id }) }}" style="color:red">{{ 'edit' | trans }}</a>
                                </li>
                            {% endif %}
                            <li>
                                <form action="{{ path('ujm_exercise_question_delete', {
                                        'exoID': exerciseID, 'qid': interaction.question.id, 'pageNow': pagerQuestion.getCurrentPage,
                                        'maxPage': pagerQuestion.maxPerPage, 'nbItem': pagerQuestion.getNbResults, 'lastPage': pagerQuestion.getNbPages
                                    }) }}" method="post">
                                    <button type="submit">{{ 'delete of my exercise' | trans }}</button>
                                </form>
                            </li>
                        </ul>
                    </td>
                    <td class="classic">
                        <a href="#" onclick="changeOrderQuestion('up', '{{interaction.question.title|replace({'\'': '_'})}}');"><i class="icon-arrow-up" id="up{{i}}"></i></a>
                        &nbsp;
                        <a href="#" onclick="changeOrderQuestion('down', '{{interaction.question.title|replace({'\'': '_'})}}');"><i class="icon-arrow-down" id="down{{i}}"></i></a>
                    </td>
                    <td style="display: none;" id="qid{{i}}">
                        {{ interaction.question.id }}
                    </td>
                </tr>
                {% set i = i + 1 %}
            {% endfor %}
            </tbody>
        </table>
     {% if pagerQuestion.haveToPaginate %}
            {{ pagerfanta(pagerQuestion, 'twitter_bootstrap_translated', {'routeName': 'ujm_exercise_questions', 'routeParams':
            { 'id': exerciseID } }) }}
        {% endif %}
    {% else %}
        <p>{{ 'noQuestionFound'|trans }} ...</p>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript" src="{{ asset('bundles/ujmexo/js/SortAndSearch.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/ujmexo/js/ExerciceQuestion.js') }}"></script>

{% endblock %}
