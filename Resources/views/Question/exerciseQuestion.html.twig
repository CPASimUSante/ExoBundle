{% extends "ClarolineCoreBundle:Workspace:layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/ujmexo/css/tableLayout.css') }}" type="text/css" rel="stylesheet"/>
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css"/>
{% endblock %}

{% block title %} {{ 'list of question' | trans }} {% endblock %}

{% block section_content %}

    <div class="panel-heading" style="padding-left: 50px;">
        <h1>{{ 'my questions' | trans }}</h1>
    </div><br/>

    <a href="{{ path('ujm_exercise_open', { 'exerciseId':  exerciseID }) }}" style="margin-left: 50px;">
        <i class="icon-arrow-left"></i> {{ 'back' | trans }}
    </a>
    &nbsp;&nbsp;|&nbsp;&nbsp;
    <a href="{{ path('ujm_exercise_import_question', { 'exoID':  exerciseID, 'pageGoNow': pagerQuestion.getNbPages,
        'maxPage': pagerQuestion.maxPerPage, 'nbItem': pagerQuestion.getNbResults }) }}">{{ 'import questions' | trans }}</a>
    &nbsp;&nbsp;|&nbsp;&nbsp;
    <a href="{{ path('ujm_question_new', { 'exoID': exerciseID }) }}">{{ 'create a new entry' | trans }}</a>

    <hr/>

    <button type="button" id="SaveOrder" style="display: none; margin-left: 50px;" class="btn btn-primary"
        onclick="SaveNewOrder('{{ path('ujm_exercise_question_order') }}', {{exerciseID}});">
        {{ 'saveNewOrder' | trans }}
    </button><br/>

    <div style="padding-left: 50px; padding-right: 50px;">
        {% if interactions is not empty %}
            <table class="table table-striped table-bordered table-condensed" id="QuestionArray">
                <thead>
                    <tr style="background-color: lightsteelblue;">
                        <th class="classic">
                            {{ 'category' | trans }}
                        </th>
                        <th class="classic">
                            {{ 'title' | trans }}
                        </th>
                        <th class="classic">
                            {{ 'type' | trans }}
                        </th>
                        <th class="classic">
                            {{ 'question' | trans }}
                        </th>
                        <th class="classic">{{ 'actions' | trans }}</th>
                    </tr>
                </thead>
                <tbody>
                {% set i = 0 %}
                {% for interaction in interactions %}
                    {% set x = i + 3 * (pagerQuestion.getCurrentPage - 1) %}
                    <tr>
                        <td class="classic">{{ interaction.question.category.value }}</td>
                        <td class="classic"><a href="{{ path('ujm_question_show', { 'id': interaction.question.id }) }}">{{ interaction.question.title }}</a></td>
                        <td class="classic">{{ interaction.type }}</td>
                        <td class="classic">{{ interaction.invite|raw }}</td>
                        <td class="classic">
                            <ul  style="list-style-type: none; margin-left: 0; padding-left: 0;">
                                {% if(questionWithResponse[x] == 0) %}
                                    <li>
                                        <a href="{{ path('ujm_question_edit', { 'id': interaction.question.id }) }}">
                                            <i class="icon-pencil"></i>&nbsp;{{ 'edit' | trans }}
                                        </a>
                                    </li>
                                {% else %}
                                    <li>
                                        <a href="{{ path('ujm_question_edit', { 'id': interaction.question.id }) }}" style="color: red;">
                                             <i class="icon-pencil"></i>&nbsp;{{ 'edit' | trans }}
                                        </a>
                                    </li>
                                {% endif %}
                                <li>
                                    <a href="{{ path('ujm_exercise_question_delete', {
                                            'exoID': exerciseID, 'qid': interaction.question.id, 'pageNow': pagerQuestion.getCurrentPage,
                                            'maxPage': pagerQuestion.maxPerPage, 'nbItem': pagerQuestion.getNbResults,
                                            'lastPage': pagerQuestion.getNbPages }) }}">
                                        <i class="icon-trash"></i>&nbsp;{{ 'delete of my exercise' | trans }}
                                    </a>
                                </li>
                            </ul>
                        </td>
                        <td style="display: none;" id="qid{{i}}">
                            {{ interaction.question.id }}
                        </td>
                    </tr>
                    {% set i = i + 1 %}
                {% endfor %}
                </tbody>
            </table>

            <div style="text-align: center;">
                {% if pagerQuestion.haveToPaginate %}
                    {{ pagerfanta(pagerQuestion, 'twitter_bootstrap_translated', {'routeName': 'ujm_exercise_questions', 'routeParams':
                    { 'id': exerciseID } }) }}
                {% endif %}
            </div>
        {% else %}
            <p>{{ 'noQuestionFound'|trans }} ...</p>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript" src="{{ asset('bundles/frontend/jquery/jquery-ui-1.9.2/jquery-ui-1.9.2.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/ujmexo/js/ExerciceQuestion.js') }}"></script>

{% endblock %}
