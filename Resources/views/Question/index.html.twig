{% extends "ClarolineCoreBundle:Desktop:layout.html.twig" %}

{% block section_content %}
    <h3>{{ "My questions" | trans }}</h3>
    <hr/>
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th style="text-align: center">{{ "Category" | trans }}</th>
                <th style="text-align: center">{{ "Title" | trans }}</th>
                <th style="text-align: center">{{ "Type" | trans }}</th>
                <th style="text-align: center">{{ "Question" | trans }}</th>
                <th style="text-align: center">{{ "Actions" | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% set i = 0 %}
        {% for interaction in interactions %}
            <tr>
                <td style="text-align: center; vertical-align: middle;">{{ interaction.question.category.value }}</td>
                <td style="text-align: center; vertical-align: middle;"><a href="{{ path('ujm_question_show', { 'id': interaction.question.id }) }}">{{ interaction.question.title }}</a></td>
                <td style="text-align: center; vertical-align: middle;">{{ interaction.type }}</td>
                <td style="text-align: center; vertical-align: middle;">{{ interaction.invite|raw }}</td>
                <td style="text-align: center; vertical-align: middle;">
                    <ul style="text-align: center; vertical-align: middle; list-style-type: none;">
                        <li>
                            <a href="{{ path('ujm_question_share', { 'questionID': interaction.question.id }) }}">{{ "Share" | trans }}</a>
                        </li>
                        {% if(questionWithResponse[i] == 0) %}
                            <li>
                                <a href="{{ path('ujm_question_edit', { 'id': interaction.question.id }) }}">{{ "Edit" | trans }}</a>
                            </li>
                            <li>
                                <form action="{{ path('ujm_question_delete', { 'id': interaction.question.id}) }}" method="post">
                                    <button type="submit">{{ "Delete of my bank" | trans }}</button>
                                </form>
                            </li>
                        {% else %}
                            <li>
                                <a href="{{ path('ujm_question_edit', { 'id': interaction.question.id }) }}" style="color:red">{{ "Edit" | trans }}</a>
                            </li>
                        {% endif %}
                    </ul>
                </td>
                {% if(alreadyShared[i] == 1) %}
                    <td style="text-align: center; vertical-align: middle;"><i class=" icon-share-alt"></i></td>
                {% endif %}
            </tr>
            {% set i=i+1 %}
        {% endfor %}
        </tbody>
    </table>
<hr/>

    <h3>{{ "My shared questions" | trans }}</h3>

    <table class="table table-striped table-bordered table-condensed">
        <thead>
