{% extends "ClarolineCoreBundle:Desktop:layout.html.twig" %}

{% block section_content %}
    <ul>
        <li style="float: left;  margin-left: 70px;">
            <a href="{{ path('ujm_question_new') }}">
                {{ 'Create a new entry' | trans }}
            </a>
        </li>

        <li style="float: left; margin-left: 100px;">
            <a href="{{ path('ujm_question_manage_doc') }}">
                {{ 'manageImg' | trans }}
            </a>
        </li>

        <li style="float: left; margin-left: 100px;">
            <a href="{{ path('ujm_question_search_question') }}">
                {{ 'SearchQuestion' | trans }}
            </a>
        </li>
    </ul>
<hr/>

    <h3>{{ 'My questions' | trans }}</h3>

    <hr/>

    {% if interactions is not empty %}

        <table class="table table-striped table-bordered table-condensed" id="QuestionArrayMy">
            <thead>
                <tr>
                    <th style="text-align: center" onclick="SortQuestions('Category', 'QuestionArrayMy');"
                        onmouseover="this.style.color = '#0099FF'; body.style.cursor = 'pointer';"
                        onmouseout="this.style.color = 'black'; body.style.cursor = 'default';">
                        <i class="icon-chevron-up" id="upC"  style="display: none;"></i>
                        <i class="icon-chevron-down" id="downC"  style="display: none;"></i>
                        {{ 'Category' | trans }}
                    </th>
                    <th style="text-align: center"onclick="SortQuestions('Title', 'QuestionArrayMy');"
                        onmouseover="this.style.color = '#0099FF'; body.style.cursor = 'pointer';"
                        onmouseout="this.style.color = 'black'; body.style.cursor = 'default';">
                        <i class="icon-chevron-up" id="upTi"  style="display: none;"></i>
                        <i class="icon-chevron-down" id="downTi"  style="display: none;"></i>
                        {{ 'Title' | trans }}
                    </th>
                    <th style="text-align: center"onclick="SortQuestions('Type', 'QuestionArrayMy');"
                        onmouseover="this.style.color = '#0099FF'; body.style.cursor = 'pointer';"
                        onmouseout="this.style.color = 'black'; body.style.cursor = 'default';">
                        <i class="icon-chevron-up" id="upTy"  style="display: none;"></i>
                        <i class="icon-chevron-down" id="downTy"  style="display: none;"></i>
                        {{ 'Type' | trans }}
                    </th>
                    <th style="text-align: center"onclick="SortQuestions('Invite', 'QuestionArrayMy')"
                        onmouseover="this.style.color = '#0099FF'; body.style.cursor = 'pointer';"
                        onmouseout="this.style.color = 'black'; body.style.cursor = 'default';">
                        <i class="icon-chevron-up" id="upI"  style="display: none;"></i>
                        <i class="icon-chevron-down" id="downI"  style="display: none;"></i>
                        {{ 'Question' | trans }}
                    </th>
                    <th style="text-align: center">{{ 'Actions' | trans }}</th>
                    <th><i class="icon-share-alt"></th>
                </tr>
            </thead>
            <tbody>
            {% set i = 0 %}
            {% for interaction in interactions %}
                {% set x = i + 3 * (pagerMy.getCurrentPage - 1) %}
                <tr>
                    <td style="text-align: center; vertical-align: middle;">{{ interaction.question.category.value }}</td>
                    <td style="text-align: center; vertical-align: middle;"><a href="{{ path('ujm_question_show', { 'id': interaction.question.id }) }}">{{ interaction.question.title }}</a></td>
                    <td style="text-align: center; vertical-align: middle;">{{ interaction.type }}</td>
                    <td style="text-align: center; vertical-align: middle;">{{ interaction.invite|raw }}</td>
                    <td style="text-align: center; vertical-align: middle;">
                        <ul style="text-align: center; vertical-align: middle; list-style-type: none; margin-left: 0;">
                            <li>
                                <a href="{{ path('ujm_question_share', { 'questionID': interaction.question.id }) }}">{{ 'Share' | trans }}</a>
                            </li>
                            {% if(questionWithResponse[x] == 0) %}
                                <li>
                                    <a href="{{ path('ujm_question_edit', { 'id': interaction.question.id }) }}">{{ 'Edit' | trans }}</a>
                                </li>
                                <li>
                                    <form action="{{ path('ujm_question_delete', {
                                        'id': interaction.question.id, 'pageNow': pagerMy.getCurrentPage, 'maxPage': pagerMy.maxPerPage,
                                        'nbItem': pagerMy.getNbResults, 'lastPage': pagerMy.getNbPages }) }}" method="post">
                                        <button type="submit">{{ 'Delete of my bank' | trans }}</button>
                                    </form>
                                </li>
                            {% else %}
                                <li>
                                    <a href="{{ path('ujm_question_edit', { 'id': interaction.question.id }) }}" style="color:red">{{ 'Edit' | trans }}</a>
                                </li>
                            {% endif %}
                        </ul>
                    </td>
                    {% if(alreadyShared[x] == 1) %}
                        <td style="text-align: center; vertical-align: middle;"><i class=" icon-share-alt"></i></td>
                    {% else %}
                        <td></td>
                    {% endif %}
                </tr>
                {% set i=i+1 %}
            {% endfor %}
            </tbody>
        </table>

        {% if pagerMy.haveToPaginate %}
            {{ pagerfanta(pagerMy, 'twitter_bootstrap_translated',
            {'routeName': 'ujm_question_index', 'routeParams':
            {'pagerShared': pagerShared.getCurrentPage, 'pagerMy': pagerMy.getCurrentPage, 'click': 'my'} }) }}
        {% endif %}
    {% else %}
        <p>{{ 'noQuestionFound'|trans }}</p>
    {% endif %}

    <hr/>

    <h3>{{ 'My shared questions' | trans }}</h3>

    {% if sharedWithMe is not empty %}

        <table class="table table-striped table-bordered table-condensed" id="QuestionArrayShared">
            <thead>
                <tr>
                    <th style="text-align: center" onclick="SortQuestions('Category', 'QuestionArrayShared');"
                        onmouseover="this.style.color = '#0099FF'; body.style.cursor = 'pointer';"
                        onmouseout="this.style.color = 'black'; body.style.cursor = 'default';">
                        <i class="icon-chevron-up" id="upCs"  style="display: none;"></i>
                        <i class="icon-chevron-down" id="downCs"  style="display: none;"></i>
                        {{ 'Category' | trans }}
                    </th>
                    <th style="text-align: center"onclick="SortQuestions('Title', 'QuestionArrayShared');"
                        onmouseover="this.style.color = '#0099FF'; body.style.cursor = 'pointer';"
                        onmouseout="this.style.color = 'black'; body.style.cursor = 'default';">
                        <i class="icon-chevron-up" id="upTis"  style="display: none;"></i>
                        <i class="icon-chevron-down" id="downTis"  style="display: none;"></i>
                        {{ 'Title' | trans }}
                    </th>
                    <th style="text-align: center"onclick="SortQuestions('Type', 'QuestionArrayShared');"
                        onmouseover="this.style.color = '#0099FF'; body.style.cursor = 'pointer';"
                        onmouseout="this.style.color = 'black'; body.style.cursor = 'default';">
                        <i class="icon-chevron-up" id="upTys"  style="display: none;"></i>
                        <i class="icon-chevron-down" id="downTys"  style="display: none;"></i>
                        {{ 'Type' | trans }}
                    </th>
                    <th style="text-align: center"onclick="SortQuestions('Invite', 'QuestionArrayShared')"
                        onmouseover="this.style.color = '#0099FF'; body.style.cursor = 'pointer';"
                        onmouseout="this.style.color = 'black'; body.style.cursor = 'default';">
                        <i class="icon-chevron-up" id="upIs"  style="display: none;"></i>
                        <i class="icon-chevron-down" id="downIs"  style="display: none;"></i>
                        {{ 'Question' | trans }}
                    </th>
                    <th style="text-align: center">{{ 'shared by' | trans }}</th>
                    <!--th style="text-align: center">{#{ "Actions" | trans }#}</th-->
                </tr>
            </thead>
            <tbody>
            {% set i = 0 %}
            {% for myQShare in sharedWithMe %}
                <tr>
                    <td style="text-align: center; vertical-align: middle;">{{ myQShare.question.category.value }}</td>
                    <td style="text-align: center; vertical-align: middle;"><a href="{{ path('ujm_question_show', { 'id': myQShare.question.id }) }}">{{ myQShare.question.title }}</a></td>
                    <td style="text-align: center; vertical-align: middle;">{{ myQShare.type }}</td>
                    <td style="text-align: center; vertical-align: middle;">{{ myQShare.invite|raw }}</td>
                    <!--td style="text-align: center; vertical-align: middle;">
                        <ul style="list-style-type: none;">
                            <li>
                                <a href="{#{ path('ujm_question_share', { 'questionID': myQShare.question.id }) }}">{{ "Share" | trans }}</a>
                            </li>
                            {% if(questionWithResponse[i] == 0) %}
                                <li>
                                    <a href="{{ path('ujm_question_edit', { 'id': myQShare.question.id }) }}">{{ "Edit" | trans }}</a>
                                </li>
                                <li>
                                    <form action="{{ path('ujm_question_delete', { 'id': myQShare.question.id}) }}" method="post">
                                        <button type="submit">{{ "Delete of my bank" | trans }}</button>
                                    </form>
                                </li>
                            {% else %}
                                <li>
                                    <a href="{{ path('ujm_question_edit', { 'id': myQShare.question.id }) }}" style="color:red">{{ "Edit" | trans }}</a>
                                </li>
                            {% endif %#}
                        </ul>
                    </td-->
                    <td style="text-align: center; vertical-align: middle;">
                        {{ myQShare.question.user.firstName }} {{ myQShare.question.user.lastName }}
                    </td>
                </tr>
                {% set i=i+1 %}
            {% endfor %}
            </tbody>
        </table>

        {% if pagerShared.haveToPaginate %}
            {{ pagerfanta(pagerShared, 'twitter_bootstrap_translated',
            {'routeName': 'ujm_question_index', 'routeParams':
            {'pagerMy': pagerMy.getCurrentPage, 'pagerShared': pagerShared.getCurrentPage,  'click': 'shared'} }) }}
        {% endif %}
    {% else %}
        <p>{{ 'noQuestionFound'|trans }}</p>
    {% endif %}
    <hr/>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript" src="{{ asset('bundles/ujmexo/js/SortAndSearch.js') }}"></script>

{% endblock %}