<br/>{{ 'result' | trans }} : <br/><br/>

{% if listQuestions is not empty %}
    <table class="table table-striped table-bordered table-condensed" id="QuestionArray">
        <thead>
            <tr>
                <th style="text-align: center" onclick="SortQuestions('Category', 'QuestionArray');"
                    onmouseover="this.style.color = '#0099FF'; body.style.cursor = 'pointer';"
                    onmouseout="this.style.color = 'black'; body.style.cursor = 'default';">
                    <i class="icon-chevron-up" id="upC"  style="display: none;"></i>
                    <i class="icon-chevron-down" id="downC"  style="display: none;"></i>
                    {{ 'category' | trans }}
                </th>
                <th style="text-align: center"onclick="SortQuestions('Title', 'QuestionArray');"
                    onmouseover="this.style.color = '#0099FF'; body.style.cursor = 'pointer';"
                    onmouseout="this.style.color = 'black'; body.style.cursor = 'default';">
                    <i class="icon-chevron-up" id="upTi"  style="display: none;"></i>
                    <i class="icon-chevron-down" id="downTi"  style="display: none;"></i>
                    {{ 'title' | trans }}
                </th>
                <th style="text-align: center"onclick="SortQuestions('Type', 'QuestionArray');"
                    onmouseover="this.style.color = '#0099FF'; body.style.cursor = 'pointer';"
                    onmouseout="this.style.color = 'black'; body.style.cursor = 'default';">
                    <i class="icon-chevron-up" id="upTy"  style="display: none;"></i>
                    <i class="icon-chevron-down" id="downTy"  style="display: none;"></i>
                    {{ 'type' | trans }}
                </th>
                <th style="text-align: center"onclick="SortQuestions('Invite', 'QuestionArray')"
                    onmouseover="this.style.color = '#0099FF'; body.style.cursor = 'pointer';"
                    onmouseout="this.style.color = 'black'; body.style.cursor = 'default';">
                    <i class="icon-chevron-up" id="upI"  style="display: none;"></i>
                    <i class="icon-chevron-down" id="downI"  style="display: none;"></i>
                    {{ 'question' | trans }}
                </th>

                {% if canDisplay == 'shared' %}
                    <th style="text-align: center">{{ 'shared by' | trans }}</th>
                {% endif %}
                {% if canDisplay == 'my' %}
                    <th style="text-align: center">{{ 'actions' | trans }}</th>
                    <th><i class="icon-share-alt"></th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% set i = 0 %}
        {% for FindQuestion in listQuestions %}
            {% set x = i + 3 * (pagerSearch.getCurrentPage - 1) %}
            <tr>
                <td style="text-align: center; vertical-align: middle;">{{ FindQuestion.question.category.value }}</td>
                <td style="text-align: center; vertical-align: middle;"><a href="{{ path('ujm_question_show', { 'id': FindQuestion.question.id }) }}">{{ FindQuestion.question.title }}</a></td>
                <td style="text-align: center; vertical-align: middle;">{{ FindQuestion.type }}</td>
                <td style="text-align: center; vertical-align: middle;">{{ FindQuestion.invite|raw }}</td>
                {% if canDisplay == 'my' %}
                    <td style="text-align: center; vertical-align: middle;">
                        <ul style="text-align: center; vertical-align: middle; list-style-type: none; margin-left: 0;">
                            <li>
                                <a href="{{ path('ujm_question_share', { 'questionID': FindQuestion.question.id }) }}">{{ 'share' | trans }}</a>
                            </li>
                            {% if(questionWithResponse[x] == 0) %}
                                <li>
                                    <a href="{{ path('ujm_question_edit', { 'id': FindQuestion.question.id }) }}">{{ 'edit' | trans }}</a>
                                </li>
                                <li>
                                    <form action="{{ path('ujm_question_delete', { 'id': FindQuestion.question.id}) }}" method="post">
                                        <button type="submit">{{ 'delete of my bank' | trans }}</button>
                                    </form>
                                </li>
                            {% else %}
                                <li>
                                    <a href="{{ path('ujm_question_edit', { 'id': FindQuestion.question.id }) }}" style="color:red">{{ 'edit' | trans }}</a>
                                </li>
                            {% endif %}
                        </ul>
                    </td>
                    {% if(alreadyShared[x] == 1) %}
                        <td style="text-align: center; vertical-align: middle;"><i class="icon-share-alt"></i></td>
                    {% else %}
                        <td></td>
                    {% endif %}
                {% endif %}
                {% if canDisplay == 'shared' %}
                    <td style="text-align: center; vertical-align: middle;">
                        {{ FindQuestion.question.user.firstName }} {{ FindQuestion.question.user.lastName }}
                    </td>
               {% endif %}
            </tr>
            {% set i=i+1 %}
        {% endfor %}
        </tbody>
    </table>

    {% if pagerSearch.haveToPaginate %}
        {{ pagerfanta(pagerSearch, 'twitter_bootstrap_translated', {'routeName': 'ujm_question_searchQuestion',
            'routeParams': {'where': canDisplay, 'whatToFind': whatToFind,  'type': type} }) }}
    {% endif %}
{% else %}
    <p>{{ 'noQuestionFound'|trans }} ...</p>
{% endif %}

<input type="hidden" id="type" value="{{ type }}"/>
<input type="hidden" id="whatToFind" value="{{ whatToFind }}"/>
<input type="hidden" id="where" value="{{ canDisplay }}"/>

<script type="text/javascript" src="{{ asset('bundles/ujmexo/js/SortAndSearch.js') }}"></script>