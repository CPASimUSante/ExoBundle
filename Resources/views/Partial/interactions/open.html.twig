<div>
    {{ form_row(form.typeopenquestion) }}

    <div id="qOpenScoreMaxLongResp">
        <div class="form-group row">
            {{ form_label(form.scoreMaxLongResp) }}
            <div class="col-md-9 {% if not form.scoreMaxLongResp.vars.valid %} has-error{% endif %}">
                {{ form_widget(form.scoreMaxLongResp) }}
                {{ form_errors(form.scoreMaxLongResp) }}
            </div>
        </div>
    </div>

    <div id="qOpenOneWord" style="display: none;">
        <p>
            {{ form_widget(form.wordResponses) }}
            <table id="tablewr" class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr style="background-color: lightsteelblue;">
                        <th class="classic">{{ 'ujm_exobundle_interactionopentype_wordResponses' | trans }}</th>
                        <th class="classic">{{ 'points' | trans }}</th>
                        <th class="classic">{{ 'WordResonse.caseSensitive' | trans }}</th>
                        {% if (nbResponses is not defined or nbResponses == 0) %}
                            <th class="classic">{{ 'delete' | trans }}</th>
                        {% endif %}
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
            {% if (nbResponses is not defined or nbResponses == 0) %}
                <a href="#" id="add_wr" class="btn btn-primary"><i class="fa fa-plus"></i> {{ 'add' | trans }}</a>
            {% endif %}
        </p>
    </div>
</div>
